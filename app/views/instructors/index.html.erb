<h1 class="text-center">Instructors</h1>
<a class="btn btn-success float-right" href="/instructors/new">Add Instructor</a><br><br>
<table id="instructor-table" class='table table-sm table-striped table-bordered table-hover text-center'>
  <tr class='thead-dark'>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Rank</th>
    <th>Salary</th>
    <th>Cohort</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <%= form_for (@instructor) do |f| %>
    <td><%= f.text_field :f_name %></td>
    <td><%= f.text_field :l_name %></td>
    <td><%= f.number_field :age %></td>
    <td><%= f.select(:rank, @ranks.each, {prompt: 'Select Rank'})  %></td>
    <td><%= f.number_field :salary %></td>
    <td><%= f.collection_select(:cohort_id, Cohort.all, :id, :name, {prompt: 'Select Cohort'}) %></td>
    <td><%= f.submit %></td>
    <% end %>
  </tr>
  <% @instructors.order(created_at: :desc).each do |i| %>
  <tr id="<%= i.id %>">
    <td><%= i.f_name %></td>
    <td><%= i.l_name %></td>
    <td><%= i.age %></td>
    <td><%= i.rank %></td>
    <td><%= number_to_currency(i.salary, precision: 0) %></td>
    <% if i.cohort != nil %>
    <td><%= i.cohort.name %></td>
    <% else %>
    <td>N/A</td>
    <% end %>
    <td><%= link_to 'Remove', i, method: :delete, remote: true, data: {confirm: "Click OK to remove #{i.f_name} #{i.l_name}"}  %></td>
    <td><%= link_to 'Edit', edit_instructor_path(i.id) %></td>
    <td><%= link_to 'Show', i %></td>
  </tr>
  <% end %>
</table>
