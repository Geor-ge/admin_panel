<h1>All Instructors</h1>
<%= link_to 'Add Instructor', new_instructor_path %>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Rank</th>
    <th>Salary</th>
    <th>Cohort</th>
    <th></th>
    <th></th>
  </tr>
  <% @instructors.order(id: :asc).each do |i| %>
  <tr id="<%= i.id %>">
    <td><%= i.f_name %></td>
    <td><%= i.l_name %></td>
    <td><%= i.age %></td>
    <td><%= i.rank %></td>
    <td><%= i.salary %></td>
    <td><%= i.cohort.name %></td>
    <td><%= link_to 'Edit', edit_instructor_path(i.id) %></td>
    <td><%= link_to 'Remove', i, method: :delete, remote: true, data: {confirm: "Remove #{i.f_name} #{i.l_name}?"}  %></td>
  </tr>
  <% end %>
</table>
