<h1 class="text-center">Courses</h1>
<div class="row justify-content-center">
  <table class='table table-sm table-bordered text-center''>
    <tr id='thead'>
      <th>Course Name</th>
      <th>Total Hours</th>
      <th colspan="3"></th>
    </tr><tr>
      <%= form_for (@course) do |f| %>
      <td><%= f.text_field :name %></td>
      <td><%= f.number_field :total_hours %></td>
      <td  class='button' colspan="3"><%= f.submit 'Add Course'%></td>
      <% end %>
    </tr>
    <% @courses.order(created_at: :desc).each do |c| %>
    <tr id="<%= c.id %>">
      <td><%= c.name %></td>
      <td><%= number_with_delimiter(c.total_hours) %></td>
      <td><%= link_to 'Remove', c, method: :delete, remote: true, data: {confirm: "Click OK to remove #{c.name}"}  %></td>
      <td><%= link_to 'Edit', edit_course_path(c.id) %></td>
      <td><%= link_to 'Show', c %></td>
    </tr>
    <% end %>
  </table>
</div>
